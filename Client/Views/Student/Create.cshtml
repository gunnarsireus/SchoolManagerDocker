@model Client.Models.Student

@{
    ViewData["Title"] = "Add new";
}

<h2>Add new student to course @ViewBag.CourseName</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" id="CreateForm" onmousedown="clearErrors()">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CourseId"/>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control uppercase" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control uppercase" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="Present">
                        <input asp-for="Present" />
                        @Html.DisplayNameFor(m => m.PresentOrAbsent)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <p>
        <a asp-action="Index" asp-route-id="@Model.CourseId">Back to list</a>
    </p>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}